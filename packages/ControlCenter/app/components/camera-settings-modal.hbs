<sl-dialog label='Change camera settings' open={{@open}} {{on 'sl-request-close' @onClose}}>

  <sl-select label='Resolution' value={{this.resolution}} {{on 'sl-change' this.changeResolution}}>
    {{#each-in this.resolutions as |id resolution|}}
      <sl-option value={{id}}>
        {{resolution.width}}x{{resolution.height}}
      </sl-option>
    {{/each-in}}
  </sl-select>
  <br />

  <sl-range
    label='FPS'
    value={{this.fps}}
    min='1'
    max='40'
    help-text='Current: {{this.fps}} FPS.'
    {{on 'sl-change' this.changeFPS}}
  ></sl-range>
  <br />

  <sl-radio-group
    label='Mirror'
    name='mirror'
    value={{this.mirror}}
    size='small'
    {{on 'sl-change' this.changeMirror}}
  >
    <sl-radio-button value='0'>None</sl-radio-button>
    <sl-radio-button value='1'>Vertical</sl-radio-button>
    <sl-radio-button value='2'>Horizontal</sl-radio-button>
    <sl-radio-button value='3'>Both</sl-radio-button>
  </sl-radio-group>
  <br />

  <sl-radio-group
    label='Rotation'
    name='rotation'
    size='small'
    value='{{this.rotation}}'
    {{on 'sl-change' this.changeRotation}}
  >
    <sl-radio-button value='0'>0</sl-radio-button>
    <sl-radio-button value='90'>90</sl-radio-button>
    <sl-radio-button value='180'>180</sl-radio-button>
    <sl-radio-button value='270'>270</sl-radio-button>
  </sl-radio-group>
  <br />

  <sl-range
    label='Quality'
    value={{this.quality}}
    min='1'
    max='50'
    help-text='Current: {{this.quality}}.'
    {{on 'sl-change' this.changeQuality}}
  ></sl-range>

  <sl-button slot='footer' variant='default' {{on 'click' @onClose}}>
    Cancel
  </sl-button>

  <sl-button slot='footer' variant='default' {{on 'click' this.resetSettings}}>
    Default
  </sl-button>

  <sl-button slot='footer' variant='primary' {{on 'click' this.onApply}}>
    Apply
  </sl-button>
</sl-dialog>