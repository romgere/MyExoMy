<sl-details
  class='no-border'
  variant={{this.mainVariant}}
  {{sl-details-persist 'battery-status' true}}
>
  <span slot='summary'>
    <sl-icon name='lightning-charge' />&nbsp;Battery
  </span>

  <div class='flex flex-space-around'>
    <div class='center'>
      <label>Battery Volt.</label>
      <br />
      <Misc::LiveChart
        class='mt-1'
        @value={{this.roverSensor.batteryVolt}}
        @min={{8}}
        @max={{13}}
        @maxTime={{300}}
      />
      <sl-badge class='mt-1' variant={{this.voltageBadgeVariant}}>
        {{this.volt}}
        V ({{this.roverSensor.batteryPercent}}
        %)
      </sl-badge>
    </div>
    <div class='center'>
      <label>Current.</label>
      <br />
      <Misc::LiveChart
        class='mt-1'
        @value={{this.roverSensor.current}}
        @min={{500}}
        @max={{1500}}
        @maxTime={{120}}
      />
      <sl-badge class='mt-1' variant={{this.currentBadgeVariant}}>{{this.current}} mA</sl-badge>
    </div>
    <div class='center'>
      <label>Power</label>
      <br />
      <Misc::LiveChart
        class='mt-1'
        @value={{this.roverSensor.power}}
        @min={{6000}}
        @max={{35000}}
        @maxTime={{120}}
      />
      <sl-badge class='mt-1' variant={{this.powerBadgeVariant}}>{{this.power}} W</sl-badge>
    </div>
  </div>
</sl-details>