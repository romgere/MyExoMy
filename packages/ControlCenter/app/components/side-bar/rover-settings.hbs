<sl-details class='no-border'>
  <span slot='summary'>
    <sl-icon name='gear' />&nbsp;Rover settings
  </span>
  <div class='row row-center'>
    <div class='col col-6'>
      <sl-select
        label='Driving mode'
        size='small'
        value={{@locomotionMode}}
        {{on 'sl-change' @changeDrivingMode}}
      >
        <sl-icon name='car-front' slot='prefix'></sl-icon>
        {{#each-in this.LocomotionMode as |mode|}}
          <sl-option value={{mode}}>{{mode}}</sl-option>
        {{/each-in}}
      </sl-select>
    </div>
  </div>
  <div class='flex flex-space-around mt-2'>
    {{#if this.roverConnection.connected}}
      <sl-button
        size='small'
        variant='primary'
        outline
        {{on 'click' @disconnect}}
      >Disconnect</sl-button>
    {{else}}
      <sl-button size='small' variant='primary' outline {{on 'click' @connect}}>Connect</sl-button>
    {{/if}}
    <sl-button
      size='small'
      variant='primary'
      outline
      disabled={{not this.roverConnection.connected}}
      {{on 'click' @motors}}
    >Toggle Motors</sl-button>
    <sl-button
      size='small'
      variant='primary'
      outline
      disabled={{not this.roverConnection.connected}}
      {{on 'click' @openCameraSettings}}
    >Camera Settings</sl-button>
  </div>
</sl-details>