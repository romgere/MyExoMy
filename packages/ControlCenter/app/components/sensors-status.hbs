<h4 class='center'><sl-icon name='thermometer-half' class='mr-2' /> Temperature</h4>
<div class='flex flex-space-around'>
  <div>
    <label>Pi Temp.</label>
    <br />
    <sl-badge
      variant={{this.piTemperatureBadgeVariant}}
    >{{this.roverSensor.piTemperatureString}}</sl-badge>
  </div>
  <div>
    <label>Body Temp.</label>
    <br />
    <sl-badge
      variant={{this.bodyTemperatureBadgeVariant}}
    >{{this.roverSensor.bodyTemperatureString}}</sl-badge>
  </div>
</div>

<sl-divider />

<h4 class='center'><sl-icon name='exclamation-triangle' class='mr-2' /> Alerts</h4>
<div class='flex flex-space-around'>
  <SensorStatus::Button
    @enable={{this.roverSensor.underVoltage}}
    @critical={{true}}
    @tooltip='Under-voltage detected'
  >
    Volt.
  </SensorStatus::Button>
  <SensorStatus::Button
    @enable={{this.roverSensor.armFreqCapped}}
    @critical={{true}}
    @tooltip='ARM frequency Capped'
  >
    ARM Freq.
  </SensorStatus::Button>
  <SensorStatus::Button
    @enable={{this.roverSensor.throttled}}
    @critical={{true}}
    @tooltip='Currently throttled'
  >
    Throttled
  </SensorStatus::Button>
  <SensorStatus::Button
    @enable={{this.roverSensor.softTemperatureLimit}}
    @critical={{true}}
    @tooltip='Soft temperature limit active'
  >
    Temp.
  </SensorStatus::Button>
</div>
<div class='flex flex-space-around mt-2'>
  <SensorStatus::Button
    @enable={{this.roverSensor.underVoltageOccurred}}
    @critical={{false}}
    @tooltip='Under-voltage has occurred'
  >
    <em>Volt.*</em>
  </SensorStatus::Button>
  <SensorStatus::Button
    @enable={{this.roverSensor.armFreqCappedOccurred}}
    @critical={{false}}
    @tooltip='Arm frequency capping has occurred'
  >
    <em>ARM Freq.*</em>
  </SensorStatus::Button>
  <SensorStatus::Button
    @enable={{this.roverSensor.throttledOccurred}}
    @critical={{false}}
    @tooltip='Throttling has occurred'
  >
    <em>Throttled*</em>
  </SensorStatus::Button>
  <SensorStatus::Button
    @enable={{this.roverSensor.softTemperatureLimitOccurred}}
    @critical={{false}}
    @tooltip='Soft temperature limit occurred'
  >
    <em>Temp.*</em>
  </SensorStatus::Button>
</div>