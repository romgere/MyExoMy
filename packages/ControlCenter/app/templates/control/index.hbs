<sl-split-panel position='80' class='main-split-panel' {{this.registerSplitPanel}}>
  <div slot='start'>
    <div class='display-container'>
      {{#if this.showVJoy}}
        <VirtualJoystick @onJoyMove={{this.onVJoyMove}} @onJoyEnd={{this.onVJoyEnd}} />
      {{/if}}
      <div class='video-container'>
        {{#if this.showVideo}}
          <Video
            @roverCameraAddress={{this.roverCameraAddress}}
            @wanMode={{this.wanMode}}
            @testMode={{this.testMode}}
            class='rover-video'
          />
        {{/if}}
        <Hud @hidden={{not this.showHud}} class={{if this.fullHud 'full-hud'}} />
      </div>
    </div>
  </div>
  <div slot='end'>
    <SideBar::MainStatus />
    <sl-divider />
    <SideBar::TemperatureStatus />
    <sl-divider />
    <SideBar::BatteryStatus />
    <sl-divider />
    <SideBar::PiStatus />
    <sl-divider />
    <SideBar::GpsInfos />
    <sl-divider />
    <SideBar::UiSetttings
      @showHud={{this.showHud}}
      @toggleHud={{this.toggleHud}}
      @fullHud={{this.fullHud}}
      @toggleFullHud={{this.toggleFullHud}}
      @showVJoy={{this.showVJoy}}
      @toggleVirtualJoystick={{this.toggleVirtualJoystick}}
      @showVideo={{this.showVideo}}
      @toggleVideo={{this.toggleVideo}}
      @setAspectRatio={{this.setAspectRatio}}
    />
    <sl-divider />
    <SideBar::RoverSettings
      @locomotionMode={{this.locomotionMode}}
      @changeDrivingMode={{this.changeDrivingMode}}
      @connect={{this.connect}}
      @disconnect={{this.disconnect}}
      @motors={{this.motors}}
      @openCameraSettings={{this.openCameraSettings}}
    />
  </div>
</sl-split-panel>

<CameraSettingsModal
  @open={{this.showCameraSettingsModal}}
  @onClose={{this.closeCameraSettings}}
  @onApply={{this.onApplyCameraSettings}}
/>