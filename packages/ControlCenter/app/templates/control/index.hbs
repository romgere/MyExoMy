<sl-split-panel position="80" class="main-split-panel">
  <div slot="start">
    <div class="video-container">
      <VirtualJoystick
        @onJoyMove={{this.onVJoyMove}}
        @onJoyEnd={{this.onVJoyEnd}}
      />
      <Video @roverAddress={{this.roverAddress}} @testMode={{this.testMode}} class="rover-video" />
    </div>
  </div>
  <div slot="end">
    <div>
      Connection : <ConnexionStatus @connected={{this.roverConnection.connected}} />
      {{#if this.roverConnection.connected}}
        <sl-button size="small" variant="neutral" {{on "click" this.disconnect}}>Disconnect</sl-button>
      {{else}}
        <sl-button size="small" variant="primary" {{on "click" this.connect}}>Connect</sl-button>
      {{/if}}
    </div>
    <sl-divider />
    <div>
      <sl-select label="Driving mode"  value={{this.locomotionMode}} {{on "sl-change" this.changeDrivingMode}}>
          <sl-icon name="car-front" slot="prefix"></sl-icon>
        {{#each-in this.LocomotionMode as |mode|}}
          <sl-option value={{mode}}>{{mode}}</sl-option>
        {{/each-in}}
      </sl-select>
    </div>
    <sl-divider />
    <sl-button type="button" {{on "click" this.motors}}>Toggle Motors</sl-button>
    <sl-button type="button" {{on "click" this.sendUpdateCameraSettingsCommand}}>Camera Test</sl-button>

    </div>
</sl-split-panel>
